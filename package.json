{
  "name": "ui",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "start": "run-p keycloak start:jsonserver vite",
    "start:dev": "run-p keycloak vite",
    "keycloak": "cd keycloak && docker compose up",
    "prestart:jsonserver": "node mocks/createMockDb.js",
    "start:jsonserver": "node mocks/apiServer.js",
    "test": "TZ=UTC jest --coverage",
    "monitor": "TZ=UTC jest --watchAll",
    "lint:fix": "eslint --ext .js,.jsx src --fix",
    "lint": "eslint --ext .js,.jsx src",
    "build": "vite build",
    "preview": "vite preview",
    "vite": "vite",
    "localdev": "npm install && npm run vite -- --host"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/mocks/**",
      "!**/coverage/**",
      "!**/dist/**",
      "!**/*.config.js",
      "!**/*keycloak.js"
    ],
    "testEnvironment": "jest-environment-jsdom",
    "setupFilesAfterEnv": [
      "./src/test/setupTests.js"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env"
      ],
      [
        "@babel/preset-react",
        {
          "runtime": "automatic"
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-transform-runtime",
      "babel-plugin-transform-vite-meta-env"
    ]
  },
  "dependencies": {
    "@react-keycloak/web": "^3.4.0",
    "axios": "^0.26.0",
    "dayjs": "^1.11.0",
    "govuk-frontend": "^4.0.1",
    "keycloak-js": "15.0.2",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-error-boundary": "^3.1.4",
    "react-hook-form": "^7.28.1",
    "react-router-dom": "^6.2.2",
    "react-router-hash-link": "^2.4.3",
    "stylelint": "^14.6.1",
    "stylelint-scss": "^4.2.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.18.6",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.4",
    "@testing-library/react-hooks": "^8.0.1",
    "@vitejs/plugin-react": "^1.0.7",
    "babel-jest": "^27.5.1",
    "babel-plugin-transform-vite-meta-env": "^1.0.3",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "jest": "^27.5.1",
    "json-server": "^0.17.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.1",
    "react-test-renderer": "^17.0.2",
    "sass": "^1.49.9",
    "stylelint-config-standard-scss": "^3.0.0",
    "vite": "^2.8.0"
  },
  "overrides": {
    "json-server": {
      "got": "^12.1.0"
    }
  }
}
